@model CentiSoft.Models.CustomerVM

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-striped table-bordered">
<thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>RoomNumber</th>
        <th>Actions</th>
    </tr>
</thead>
<tbody>
    @foreach (var customervm in Model.customers)
    {
        <tr>
            <td>@customervm.Id</td>
            <td>@customervm.Name</td>
            <td>@customervm.Position</td>
            <td>@customervm.Company</td>
            <td>@customervm.PhoneNumber</td>            
        </tr>
    }
</tbody>
</table>
